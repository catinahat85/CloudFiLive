version: '3'
services:
  swag:
    image: linuxserver/swag
    container_name: swag
    cap_add:
      - NET_ADMIN
    environment:
      - PUID=501
      - PGID=20
      - TZ=America/New_York  # Change to your timezone
      - URL=beatsinthe.cloud   # Change to your domain
      - SUBDOMAINS=www
      - VALIDATION=http      # or dns for DNS validation
      - EMAIL=your-jakepin85@gmail.com # Email for Let's Encrypt
    volumes:
      - ./config:/config  # Volume for configuration files
    ports:
      - 443:443
      - 80:80
    restart: unless-stopped
